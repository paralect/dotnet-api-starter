{
  "$jsonSchema": {
    "required": [ "firstName", "lastName", "email" ],
    "properties": {
      "_id": {
        "bsonType": "string"
      },
      "createdOn": {
        "bsonType": "date"
      },
      "updatedOn": {
        "bsonType": "date"
      },
      "firstName": {
        "bsonType": "string"
      },
      "lastName": {
        "bsonType": "string"
      },
      "email": {
        "bsonType": "string",
        "pattern": "^.+@.+\\..+$"
      },
      "role": {
        "bsonType": "string"
      },
      "passwordHash": {
        "bsonType": "string"
      },
      "signupToken": {
        "bsonType": "string"
      },
      "resetPasswordToken": {
        "bsonType": "string"
      },
      "isEmailVerified": {
        "bsonType": "bool"
      },
      "oauthGoogle": {
        "bsonType": "bool"
      },
      "lastRequest": {
        "bsonType": "date"
      }
    }
  }
}